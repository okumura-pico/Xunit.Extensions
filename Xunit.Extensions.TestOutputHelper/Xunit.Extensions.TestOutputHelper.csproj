<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
  </PropertyGroup>

  <PropertyGroup>
    <Title>Xunit.Extensions.TestOutputHelper</Title>
    <Description>Building logger extension for Xunit ITesOutputHelper.</Description>
    <Version>0.3.0</Version>
    <Authors>okumura</Authors>
    <PackageId>Xunit.Extensions.TestOutputHelper</PackageId>
    <PackageIcon>icon.png</PackageIcon>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/okumura-pico/Xunit.Extensions</PackageProjectUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/okumura-pico/Xunit.Extensions</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>xunit</PackageTags>
    <Copyright>(C) okumura.pico</Copyright>

  </PropertyGroup>

  <ItemGroup>
    <None Include="images\icon.png" Pack="true" PackagePath="\" />
    <None Include="README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Logging" Version="[6.0.0,7.0.0)" />
    <PackageReference Include="xunit.abstractions" Version="[2.0.2,3.0.0)" />
  </ItemGroup>
</Project>
